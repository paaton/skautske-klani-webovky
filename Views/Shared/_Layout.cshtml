@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skautské klání</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="favicon.ico">
</head>
<body style=" background-color: #000F1F">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand nav-color" asp-area="" asp-controller="Home" asp-action="Index"><img href="favicon.ico" /> Skautské klání</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="align-content-center navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            if (@HttpContextAccessor.HttpContext.Session.GetString("Team_Id") == null) //provides diferent menu for logged in people
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-color" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link  nav-color" asp-area="" asp-controller="User" asp-action="Results">Výsledky</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link nav-color" asp-area="" asp-controller="User" asp-action="Index">Přihlásit se</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item ">
                                    <a class="nav-link  text-white" asp-area="" asp-controller="User" asp-action="Account">účet</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link  text-white" asp-area="" asp-controller="User" asp-action="Matches">zápasy</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link  text-white" asp-area="" asp-controller="User" asp-action="Results">výsledky</a>
                                </li>
                            }

                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" style="text-decoration: none; color: deeppink">&copy;</a> 2020 - OP, Druid @{/*there is a easter egg, have found it in webpage before reading this? */ }
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
